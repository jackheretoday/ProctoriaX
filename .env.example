# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URI=sqlite:///testing_platform.db
# For MySQL/PostgreSQL:
# DATABASE_URI=mysql://username:password@localhost/testing_platform
# DATABASE_URI=postgresql://username:password@localhost/testing_platform

# Encryption Configuration (AES-256)
ENCRYPTION_KEY=your-aes-256-encryption-key-32-bytes-change-this

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
PERMANENT_SESSION_LIFETIME=3600

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_STRATEGY=fixed-window

# File Upload
MAX_CONTENT_LENGTH=10485760
UPLOAD_FOLDER=storage/uploads
ALLOWED_EXTENSIONS=docx,pptx,xlsx

# Application Settings
ORGANIZATION_NAME=Testing Platform
MAX_TERMS_BULLETS=10
PASSWORD_MIN_LENGTH=8

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
